<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_order"
    android:orientation="vertical"
    tools:context=".MyProfile"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_125sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_gravity="center_vertical|center_horizontal"
              />

            <Button
                android:id="@+id/upload"
                android:onClick="upload"
                android:textSize="@dimen/_14ssp"
                android:text="upload image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/custominput"
                android:textColor="#F6F6F6"
              android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <EditText

                android:id="@+id/YourName"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/custominput"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Your Name"
                android:textColorHint="#BCBBBB"
                android:inputType="textWebEmailAddress"
                android:padding="@dimen/_10sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center_vertical|center_horizontal"
                />
            <Button

                android:onClick="share"
                android:textSize="@dimen/_14ssp"
                android:text="share"
                android:layout_width="@dimen/_100sdp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/custominput"
                android:textColor="#F6F6F6"
                android:layout_marginTop="@dimen/_10sdp"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_150sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:src="@drawable/facebook__1_"
                />


            <Button
                android:id="@+id/facebookpress"
                android:onClick="facebookpress"
                android:textSize="@dimen/_14ssp"
                android:text="My facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F58E8"
                android:textColor="#F6F6F6"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_150sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:src="@drawable/instagram" />
            <Button
                android:id="@+id/instagrampress"
                android:onClick="instagrampress"
                android:textSize="@dimen/_12ssp"
                android:text="My instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#7A213F"
                android:textColor="#F6F6F6"
                android:layout_margin="@dimen/_10sdp"

                />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>